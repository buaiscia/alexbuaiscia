<% include ../partials/header %>

    <div class="spaceSection">
        <div class="row">
            <h1 style="text-align: center; padding: 20px;"> Edit
                <%= devPost.name %>
            </h1>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div style="width: 80%; margin: 25px auto;">
                    <form action="/devblog/<%= devPost._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="devPost[name]" value="<%= devPost.name %>">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="devPost[image]" value="<%= devPost.image %>">
                        </div>
                        <div class="form-group">
                            <textarea rows="10" cols="150" name="devPost[text]" id="mytextarea"><%= devPost.text %></textarea>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="devPost[description]" value="<%= devPost.description %>">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                        </div>
                    </form>
                    <a href="/devBlog">Go Back</a>
                </div>
            </div>

        </div>
    </div>



    <% include ../partials/footer %>