<% include ../partials/headerSpace %>


    <div class="row">
        <h1 style="text-align: center">Edit
            <%= spacePost.name %>
        </h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/spaceblog/<%= spacePost._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="spacePost[name]" value="<%= spacePost.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="spacePost[image]" value="<%= spacePost.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="spacePost[description]" value="<%= spacePost.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="spacePost[text]" value="<%= spacePost.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/spaceBlog">Go Back</a>
        </div>
    </div>

    <% include ../partials/footer %>