<% include ../partials/header %>


<div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Space blog</h1>
             <% if(currentUser && username === "alex"){ %>
            <p>
                <a class="btn btn-primary btn-large" href="/spaceblog/new">Add New Space Post</a>
            </p>
             <% }%>
         </div>
     </header>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% spacePosts.forEach(function(post){ %>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail">
                   <img src="<%= post.image %>" style="width:100%">
                   <div class="caption">
                       <h4><%= post.name %></h4>
                   </div>
                   <p>
                       <a href="/spaceblog/<%= post._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div> 
     
</div>

<% include ../partials/footer %>